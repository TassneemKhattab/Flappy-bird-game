#defining function
def isAnagram(string1, string2):
    #lengths of both strings
    n1 = len(string1)
    n2 = len(string2)
    
    #sort both strings
    string1 = sorted(string1)
    string2 = sorted(string2)

    #compare the sorted strings
    for i in range(0, n1):
        if string1[i] != string2[i]:
            return 0
    return 1

string1 = "cinema"
string2 = "iceman"

#calling function
if isAnagram(string1, string2):
    print("they are anagrams")
else:
    print("they are not anagrams")

string1 = "apple"
string2 = "orange"

#calling function
if isAnagram(string1, string2):
    print("they are anagrams")
else:
    print("they are not anagrams")

string1 = "school"
string2 = "house"

#calling function
if isAnagram(string1, string2):
    print("they are anagrams")
else:
    print("they are not anagrams")
